<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_vertical"
    android:padding="10dp">


    <ImageView
        android:id="@+id/editlogo"
        android:background="@drawable/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/edittext1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:ems="9"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@id/editlogo"
        android:text="Enter a Municipalities that you want to know about covid-19 Update"
        android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/edittext2"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="Why do we need this app?                                                                                       this information will be used to help us to know what would be the updatea in covid-19"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/edittext1"/>

    <Button
        android:id="@+id/btnsave"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Continue"
        android:background="#61AD74"
        android:layout_below="@id/edittext2"
        android:gravity="center"
        android:layout_gravity="left"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="120dp"/>


</RelativeLayout>